# GCP project ID - replace with your actual project ID
project_id = "your-project-id"

# GCS bucket for Terraform state - must be globally unique
state_bucket = "your-unique-bucket-name"

# GCP region for resources
region = "europe-west9"

# BigQuery dataset IDs - customize as needed
bq_dev_dataset_id  = "your-dev-dataset"
bq_prod_dataset_id = "your-prod-dataset"

# Service account details
sa_account_id = "your-sa-name"
sa_key_path   = ".secrets/sa_key.json"
